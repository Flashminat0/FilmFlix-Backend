<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>BannerAction</servlet-name>
        <servlet-class>servlets.BannerServletForwarder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BannerAction</servlet-name>
        <url-pattern>/jsp/bannerAction</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CreateBanner</servlet-name>
        <servlet-class>servlets.AddBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBanner</servlet-name>
        <url-pattern>/jsp/CreateBanner</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>EditBanner</servlet-name>
        <servlet-class>servlets.EditBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBanner</servlet-name>
        <url-pattern>/jsp/EditBanner</url-pattern>
    </servlet-mapping>
</web-app>