<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--Banner-->
    <!--Banner Search -->
    <servlet>
        <servlet-name>SearchBanner</servlet-name>
        <servlet-class>servlets.Banner.SearchBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBanner</servlet-name>
        <url-pattern>/jsp/bannerSearch</url-pattern>
    </servlet-mapping>

    <!--Banner Action forwarder-->
    <servlet>
        <servlet-name>BannerAction</servlet-name>
        <servlet-class>servlets.BannerServletForwarder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BannerAction</servlet-name>
        <url-pattern>/jsp/bannerAction</url-pattern>
    </servlet-mapping>

    <!--Banner to Movie Forwarder-->
    <servlet>
        <servlet-name>BannerToMovie</servlet-name>
        <servlet-class>servlets.BannerToMovieForwarder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BannerToMovie</servlet-name>
        <url-pattern>/jsp/BufferMovie</url-pattern>
    </servlet-mapping>
    <!-- Create Banner and Movie Name-->
    <servlet>
        <servlet-name>CreateBanner</servlet-name>
        <servlet-class>servlets.Banner.AddBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBanner</servlet-name>
        <url-pattern>/jsp/CreateBanner</url-pattern>
    </servlet-mapping>

    <!-- Edit Banner and Movie Name-->
    <servlet>
        <servlet-name>EditBanner</servlet-name>
        <servlet-class>servlets.Banner.EditBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBanner</servlet-name>
        <url-pattern>/jsp/EditBanner</url-pattern>
    </servlet-mapping>

    <!-- Delete Banner and Movie Name-->
    <servlet>
        <servlet-name>DeleteBanner</servlet-name>
        <servlet-class>servlets.Banner.DeleteBannerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBanner</servlet-name>
        <url-pattern>/jsp/DeleteBanner</url-pattern>
    </servlet-mapping>
    <!--END Delete Banner and Movie Name-->

    <!--Randomize browse page with banners-->
    <servlet>
        <servlet-name>RandomizeBrowse</servlet-name>
        <servlet-class>servlets.Banner.RandomizeBannersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RandomizeBrowse</servlet-name>
        <url-pattern>/jsp/browse-randomized</url-pattern>
    </servlet-mapping>
    <!--END of Randomize browse page with banners-->

    <!--END of Banner-->


